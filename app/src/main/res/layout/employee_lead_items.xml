<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardBackgroundColor="#D0F8F4F4"
    app:contentPadding="5dp"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-condensed"

                    />
                <TextView
                    android:id="@+id/nameLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="John snow"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number :"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />
                <TextView
                    android:id="@+id/phoneLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="079665656"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />
                <TextView
                    android:id="@+id/addressLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="North"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />
                <TextView
                    android:id="@+id/emailLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="john@snow.com"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source :"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />
                <TextView
                    android:id="@+id/sourceLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="john@snow.com"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes :"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />
                <TextView
                    android:id="@+id/notesLE"
                    android:layout_width="90dp"
                    android:layout_height="70dp"

                    tools:text="john@snow.cdfsfddsfdsfdsdadfdfom"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    />

            </LinearLayout>

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/callLead"
                android:text="Call Lead"
                android:textColor="#fff"
                android:background="#4CAF50"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                />
            <Button
                android:layout_width="1dp"
               android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/ToProspect"
                android:text="Move To Prospects"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="#DFA906"
                android:layout_margin="4dp"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"

            >
            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/ToCustomer"
                android:layout_weight="1"
                android:text="Move To Customers"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                android:background="#005FD4"
                android:textColor="#fff"
                android:textSize="18dp"
                />
            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/deleteLead"
                android:text="Delete Lead"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="#C90909"
                android:textSize="18dp"
                android:layout_margin="4dp"
                />
        </LinearLayout>
        </LinearLayout>








    </RelativeLayout>



</androidx.cardview.widget.CardView>