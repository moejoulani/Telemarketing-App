<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".companycreateaccount">

        <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/taskempooo"
        android:id="@+id/topimg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/topimg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manager Create Account"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/manager_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Manager Email...."
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_marginHorizontal="14dp"

            />
        <EditText
            android:id="@+id/manager_compemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="company email...."
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="14dp"
            />
        <EditText
            android:id="@+id/manager_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password......."
            android:gravity="center"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_marginHorizontal="14dp"
            />
        <EditText
            android:id="@+id/manager_repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="re-enter password...."
            android:gravity="center"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_marginTop="10dp"

            android:layout_marginHorizontal="14dp"
            />
        <Button
            android:id="@+id/manager_createbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Account"
            android:textAllCaps="false"
            android:background="#673AB7"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/goemployeeaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:text="Create Employee Account ?"
        android:visibility="gone"
        android:textColor="#F44336" />

</RelativeLayout>